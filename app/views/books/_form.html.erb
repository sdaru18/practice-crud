<%= form_for(book) do |f| %>
  <%= f.label :writer, "作者" %>
  <%= f.text_field :writer %> <br />

  <%= f.label :title, "書名" %>
  <%= f.text_field :title %> <br />

  <%= f.label :price, "價錢" %>
  <%= f.text_field :price %> <br />

  <%= f.label :introduction, "簡介" %>
  <%= f.text_area :introduction %> <br />

  <%= f.submit %>
  
<% end %>